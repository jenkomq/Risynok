#include <stdio.h>
#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <stdlib.h>
#define _USE_MATH_DEFINES
#include <math.h>
#include <locale.h>
#pragma warning(disable : 4996)
#include <time.h>



int main() {
    setlocale(LC_ALL, "Russian");

    struct tm* mytime;
    time_t t;
    t = time(NULL);
    mytime = localtime(&t);

    char buffer[80];

    sprintf(buffer, "Текущее время: %02d:%02d:%02d", mytime->tm_hour, mytime->tm_min, mytime->tm_sec);
    printf("%*s\n", 80, buffer);

    int year = mytime->tm_year + 1900;
    int last_two_digits = year % 100;
    sprintf(buffer, "Текущий год: %02d", last_two_digits);
    printf("%*s\n", 80, buffer);

    int month = mytime->tm_mon + 1;

    if (month >= 3 && month <= 5) {
        sprintf(buffer, "Текущее время года: Весна");
        printf("%*s\n", 80, buffer);
    }
    else if (month >= 6 && month <= 8) {
        sprintf(buffer, "Текущее время года: Лето");
        printf("%*s\n", 80, buffer);
    }
    else if (month >= 9 && month <= 11) {
        sprintf(buffer, "Текущее время года: Осень");
        printf("%*s\n", 80, buffer);
    }
    else {
        sprintf(buffer, "Текущее время года: Зима");
        printf("%*s\n", 80, buffer);
    }

    printf("%*s\n", 80, "***************************");

    return 0;
}
