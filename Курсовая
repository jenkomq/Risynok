#include <stdio.h>
#include <stdlib.h>

// функция для расчета необходимого количества плиток
int calculatetiles(int roomlength, int roomwidth, int wallprotrusion, int tilesize) {
   int totaltiles;

   // вычисление площади пола без учета выступов стены
   int floorarea = roomlength * roomwidth;

   // вычисление площади пола с учетом выступов стены
   int adjustedfloorarea = floorarea + 2 * (roomlength + roomwidth) * wallprotrusion;

   // вычисление количества плиток
   totaltiles = adjustedfloorarea / tilesize;

   return totaltiles;
}

int main() {
   // переменные для хранения размеров комнаты и выступов стены
   int roomlength, roomwidth, wallprotrusion;
   // переменная для выбора действия в меню
   int choice;
   // переменные для ввода новых данных
   char continueinput;
   // переменная для выбора типа плитки
   int tiletype;

   do {
      printf("1. введите размеры комнаты\n");
      printf("2. введите выступы стены\n");
      printf("3. выберите тип плитки\n");
      printf("4. посчитать необходимое количество плиток\n");
      printf("5. выход\n");
      printf("выберите действие: ");

      scanf("%d", &choice);

      switch (choice) {
         case 1:
            printf("введите длину комнаты: ");
            scanf("%d", &roomlength);
            printf("введите ширину комнаты: ");
            scanf("%d", &roomwidth);
            break;
         case 2:
            printf("введите выступы стены: ");
            scanf("%d", &wallprotrusion);
            break;
         case 3:
            printf("выберите тип плитки (1 - размер 1 кв.м, 2 - размер 0.5 кв.м): ");
            scanf("%d", &tiletype);
            break;
         case 4:
            if (tiletype == 1) {
               printf("необходимое количество плиток: %d\n", calculatetiles(roomlength, roomwidth, wallprotrusion, 1));
            } else if (tiletype == 2) {
               printf("необходимое количество плиток: %d\n", calculatetiles(roomlength, roomwidth, wallprotrusion, 0.5));
            } else {
               printf("неверный выбор типа плитки\n");
            }
            break;
         case 5:
            printf("выход из программы.\n");
            exit(0);
         default:
            printf("неверный ввод. попробуйте еще раз.\n");
      }

      printf("продолжить? (y/n): ");
      scanf(" %c", &continueinput);
   } while (continueinput == 'y' || continueinput == 'Y');

   return 0;
}
